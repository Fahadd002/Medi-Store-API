generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum OrderStatus {
  PLACED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

model SellerInfo {
  id            String  @id @default(cuid())
  userId        String  @unique
  storeName     String
  storeAddress  String
  licenseNumber String?
  description   String?

  // user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id          String  @id @default(cuid())
  name        String  @unique
  description String?
  imageUrl    String?
  slug        String  @unique

  medicines Medicine[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
}

model Medicine {
  id           String    @id @default(cuid())
  name         String
  description  String
  price        Float
  stock        Int       @default(0)
  imageUrl     String?
  manufacturer String
  expiryDate   DateTime?
  isActive     Boolean   @default(true)

  // Foreign keys
  categoryId String
  sellerId   String

  // Relationships
  category   Category    @relation(fields: [categoryId], references: [id])
  // seller     User        @relation("SellerMedicines", fields: [sellerId], references: [id])
  orderItems OrderItem[]
  reviews    Review[]

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
  @@index([categoryId])
  @@index([sellerId])
  @@index([isActive])
}

model Order {
  id              String      @id @default(cuid())
  orderNumber     String      @unique
  customerId      String
  totalAmount     Float
  status          OrderStatus @default(PLACED)
  shippingAddress String
  customerNotes   String?

  // Relationships
  // customer User        @relation("CustomerOrders", fields: [customerId], references: [id])
  items    OrderItem[]

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([customerId])
  @@index([status])
  @@index([orderNumber])
}

model OrderItem {
  id         String @id @default(cuid())
  orderId    String
  medicineId String
  quantity   Int
  price      Float // Price at time of order

  // Relationships
  order    Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  medicine Medicine @relation(fields: [medicineId], references: [id])

  @@unique([orderId, medicineId])
}

model Review {
  id         String  @id @default(cuid())
  rating     Int // 1-5
  comment    String?
  customerId String
  medicineId String

  // Relationships
  // customer User     @relation(fields: [customerId], references: [id])
  medicine Medicine @relation(fields: [medicineId], references: [id])

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([customerId, medicineId])
}
