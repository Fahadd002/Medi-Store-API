model Medicine {
  id           String   @id @default(uuid())
  name         String
  description  String
  price        Float
  stock        Int      @default(0)
  manufacturer String
  expiryDate   DateTime?
  isActive     Boolean  @default(true)

  categoryId   String
  sellerId     String

  category     Category @relation(fields: [categoryId], references: [id])
  seller       User     @relation("MedicineSeller", fields: [sellerId], references: [id])

  orderItems   OrderItem[]
  reviews      Review[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([name])
  @@index([categoryId])
  @@index([sellerId])
  @@map("medicines")
}
